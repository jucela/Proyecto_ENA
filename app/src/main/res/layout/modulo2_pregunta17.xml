<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/margin15dp"
    android:visibility="gone"
    android:id="@+id/mod2_p17_lyt"
    android:focusableInTouchMode="true"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod2_p17"
        android:layout_marginBottom="@dimen/fab_margin"/>
    <RadioGroup
        android:id="@+id/mod2_p17_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/mod2_p17_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod2_p17_sp1"/>
        <RadioButton
            android:id="@+id/mod2_p17_rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod2_p17_sp2"/>
        <RadioButton
            android:id="@+id/mod2_p17_rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod2_p17_sp3"/>
        <RadioButton
            android:id="@+id/mod2_p17_rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod2_p17_sp4"/>
        <RadioButton
            android:id="@+id/mod2_p17_rb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod2_p17_sp5"/>
    </RadioGroup>
</LinearLayout>