<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/mod8_p5_ly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_layout_subpreguntas"
    android:padding="@dimen/margin10dp"
    android:layout_margin="@dimen/margin10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/mod8_p5_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/mod8_p5"
        android:layout_marginBottom="@dimen/margin5dp"/>
    <RadioGroup
        android:id="@+id/mod8_p5_rg"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin10dp">
        <RadioButton
            android:id="@+id/mod8_p5_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod8_p5_op1"/>
        <RadioButton
            android:id="@+id/mod8_p5_rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod8_p5_op2"/>
        <RadioButton
            android:id="@+id/mod8_p5_rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod8_p5_op3"/>
        <RadioButton
            android:id="@+id/mod8_p5_rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod8_p5_op4"/>
        <RadioButton
            android:id="@+id/mod8_p5_rb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod8_p5_op5"/>
        <RadioButton
            android:id="@+id/mod8_p5_rb6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod8_p5_op6"/>
    </RadioGroup>
</LinearLayout>

