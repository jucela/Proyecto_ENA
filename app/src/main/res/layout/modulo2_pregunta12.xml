<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/margin15dp"
    android:id="@+id/mod2_p12_lyt"
    android:focusableInTouchMode="true"
    android:visibility="gone"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod2_p12"
        android:layout_marginBottom="@dimen/fab_margin"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/mod2_p12_ck1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod2_p12_sp1"
            android:layout_margin="@dimen/margin5dp"/>
        <CheckBox
            android:id="@+id/mod2_p12_ck2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod2_p12_sp2"
            android:layout_margin="@dimen/margin5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/margin5dp">
            <CheckBox
                android:id="@+id/mod2_p12_ck3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mod2_p12_sp3"
                android:layout_marginRight="@dimen/margin15dp"
                />
            <EditText
                android:id="@+id/mod2_p12_edtEspecifique"
                android:paddingLeft="@dimen/margin5dp"
                android:hint="@string/especifique"
                android:inputType="text"
                android:maxLength="200"
                android:enabled="false"
                android:background="@drawable/fondo_edit_text_disabled"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>