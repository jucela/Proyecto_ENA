<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.gob.inei.encuestahabilidades.activities.ImportarActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MODULO IMPORTACION"
            android:padding="20dp"
            android:textSize="20sp"
            android:textColor="@color/icons"
            android:gravity="center"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="20sp"
                android:text="INGRESE EL NOMBRE DEL ARCHIVO DE LA EMPRESA A IMPORTAR"
                android:gravity="center"/>
            <EditText
                android:id="@+id/importacion_edtArchivo"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="20"
                android:background="@drawable/fondo_edit_text"/>
            <TextView
                android:id="@+id/txtImportar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:id="@+id/importacion_btnImportar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="IMPORTAR"
                android:theme="@style/RaisedButtonDark2"/>
            <Button
                android:id="@+id/importacion_btnVolver"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="volver"
                android:theme="@style/RaisedButtonDark2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
