<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/marco_item_cardview"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/margin5dp"
    android:layout_marginRight="@dimen/margin5dp"
    android:layout_marginTop="@dimen/margin5dp"
    android:layout_height="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/marco_item_txtId"
            android:layout_width="0dp"
            android:text="id"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/marco_item_txtRuc"
            android:layout_width="0dp"
            android:text="ruc"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/marco_item_txtRazonSocial"
            android:layout_width="0dp"
            android:text="razon social"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/marco_item_txtTamanio"
            android:layout_width="0dp"
            android:text="tamaÃ±o empresa"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/marco_item_txtResultado"
            android:layout_width="0dp"
            android:text=""
            android:gravity="center"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</android.support.v7.widget.CardView>