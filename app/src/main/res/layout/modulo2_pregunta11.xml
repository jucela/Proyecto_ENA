<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/margin15dp"
    android:id="@+id/mod2_p11_lyt"
    android:focusableInTouchMode="true"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod2_p11"
        android:layout_marginBottom="@dimen/fab_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod2_p11_1"
        android:textStyle="italic"
        android:layout_marginBottom="@dimen/fab_margin" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="5"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Razones"
                android:layout_marginRight="1dp"
                android:textColor="@color/icons"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Orden de importancia"
                android:textColor="@color/icons"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/mod2_p11_ck1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_weight="5"
                android:text="@string/mod2_p11_sp1" />

            <LinearLayout
                android:id="@+id/mod2_p11_lytSp1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/mod2_p11_ck2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_weight="5"
                android:text="@string/mod2_p11_sp2" />

            <LinearLayout
                android:id="@+id/mod2_p11_lytSp2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/fondo_spinner_disabled">

                <Spinner
                    android:id="@+id/mod2_p11_sp2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/financiamiento_p38"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/mod2_p11_ck3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_weight="5"
                android:text="@string/mod2_p11_sp3" />

            <LinearLayout
                android:id="@+id/mod2_p11_lytSp3"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/fondo_spinner_disabled">

                <Spinner
                    android:id="@+id/mod2_p11_sp3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/financiamiento_p38"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/mod2_p11_ck4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_weight="5"
                android:text="@string/mod2_p11_sp4" />

            <LinearLayout
                android:id="@+id/mod2_p11_lytSp4"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/fondo_spinner_disabled">

                <Spinner
                    android:id="@+id/mod2_p11_sp4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/financiamiento_p38"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/mod2_p11_ck5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_weight="5"
                android:text="@string/mod2_p11_sp5" />

            <LinearLayout
                android:id="@+id/mod2_p11_lytSp5"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/fondo_spinner_disabled">

                <Spinner
                    android:id="@+id/mod2_p11_sp5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/financiamiento_p38"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/mod2_p11_ck6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_weight="5"
                android:text="@string/mod2_p11_sp6" />

            <LinearLayout
                android:id="@+id/mod2_p11_lytSp6"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/fondo_spinner_disabled">

                <Spinner
                    android:id="@+id/mod2_p11_sp6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/financiamiento_p38"                    android:text="Orden de Importancia"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/mod2_p11_ck7"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mod2_p11_sp7" />

                <EditText
                    android:id="@+id/mod2_p11_edtEspecifique"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3"
                    android:background="@drawable/fondo_edit_text_disabled"
                    android:enabled="false"
                    android:hint="@string/especifique"
                    android:inputType="text"
                    android:maxLength="200"
                    android:paddingLeft="@dimen/margin5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mod2_p11_lytSp7"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin15dp"
                android:layout_weight="2"
                android:background="@drawable/fondo_spinner_disabled">

                <Spinner
                    android:id="@+id/mod2_p11_sp7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/financiamiento_p38"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>