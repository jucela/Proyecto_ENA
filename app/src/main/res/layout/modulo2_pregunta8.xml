<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/margin15dp"
    android:id="@+id/mod2_p8_lyt"
    android:focusableInTouchMode="true"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/mod2_p8_txtPregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod2_p8"
        android:layout_marginBottom="@dimen/fab_margin"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="JORNADA DE TRABAJO"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="@dimen/margin10dp"
                android:layout_marginRight="1dp"
                android:background="@color/accent"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="NÃšMERO"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="@dimen/margin10dp"
                android:textColor="@color/icons"
                android:background="@color/accent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="1dp">
            <CheckBox
                android:id="@+id/mod2_p8_ck1"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/mod2_p8_sp1"
                android:padding="@dimen/margin10dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/cajas_de_texto"/>
            <EditText
                android:id="@+id/mod2_p8_edt1"
                android:inputType="numberPassword"
                android:layout_width="100dp"
                android:enabled="false"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin5dp"
                android:maxLength="5"
                android:background="@drawable/fondo_edit_text_disabled"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="1dp">
            <CheckBox
                android:id="@+id/mod2_p8_ck2"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/mod2_p8_sp2"
                android:padding="@dimen/margin10dp"
                android:background="@drawable/cajas_de_texto"
                android:layout_marginRight="1dp"/>
            <EditText
                android:id="@+id/mod2_p8_edt2"
                android:inputType="numberPassword"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin5dp"
                android:enabled="false"
                android:maxLength="5"
                android:background="@drawable/fondo_edit_text_disabled"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin5dp">
            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="TOTAL"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:padding="@dimen/margin10dp"
                android:layout_marginRight="1dp"
                android:background="@color/colorAccent"/>
            <TextView
                android:id="@+id/mod2_p8_txtTotal"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin5dp"
                android:text="0"
                android:textSize="@dimen/textoMedium"
                android:gravity="center_vertical"
                android:background="@drawable/fondo_edit_text"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>