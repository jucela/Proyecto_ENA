<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/margin15dp"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod7_p38"
        android:layout_marginBottom="@dimen/fab_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod7_p38_1"
        android:layout_marginBottom="@dimen/fab_margin" />



    <LinearLayout
        android:id="@+id/mod7_p38_lyt"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin5dp">
            <TextView
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Fuentes de Financiamiento"
                android:textStyle="bold"
                android:textColor="@color/icons"
                android:background="@drawable/cabecera"/>
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Orden de Importancia"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:background="@drawable/cabecera"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical">
            <CheckBox
                android:id="@+id/mod7_p38_ck1"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:text="@string/mod7_p38_sp1"/>
            <LinearLayout
                android:id="@+id/mod7_p38_ly1"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/caja_texto_redonda">
                <Spinner
                    android:id="@+id/mod7_p38_sp1"
                    android:layout_weight="1"
                    android:entries="@array/financiamiento_p38"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Orden de Importancia"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical">
            <CheckBox
                android:id="@+id/mod7_p38_ck2"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:text="@string/mod7_p38_sp2"/>
            <LinearLayout
                android:id="@+id/mod7_p38_ly2"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/caja_texto_redonda">
                <Spinner
                    android:id="@+id/mod7_p38_sp2"
                    android:layout_weight="1"
                    android:entries="@array/financiamiento_p38"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Orden de Importancia"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical">
            <CheckBox
                android:id="@+id/mod7_p38_ck3"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:text="@string/mod7_p38_sp3"/>
            <LinearLayout
                android:id="@+id/mod7_p38_ly3"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/caja_texto_redonda">
                <Spinner
                    android:id="@+id/mod7_p38_sp3"
                    android:layout_weight="1"
                    android:entries="@array/financiamiento_p38"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Orden de Importancia"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical">
            <CheckBox
                android:id="@+id/mod7_p38_ck4"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:text="@string/mod7_p38_sp4"/>
            <LinearLayout
                android:id="@+id/mod7_p38_ly4"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/caja_texto_redonda">
                <Spinner
                    android:id="@+id/mod7_p38_sp4"
                    android:layout_weight="1"
                    android:entries="@array/financiamiento_p38"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Orden de Importancia"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/mod7_p38_ck5"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mod7_p38_sp5"
                    android:layout_marginRight="@dimen/margin10dp"/>
                <EditText
                    android:id="@+id/mod7_p38_ck5_edt"
                    android:paddingLeft="@dimen/margin5dp"
                    android:hint="@string/especifique"
                    android:inputType="text"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cajas_de_texto"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mod7_p38_ly5"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin15dp"
                android:background="@drawable/caja_texto_redonda">
                <Spinner
                    android:id="@+id/mod7_p38_sp5"
                    android:layout_weight="1"
                    android:entries="@array/financiamiento_p38"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Orden de Importancia"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>