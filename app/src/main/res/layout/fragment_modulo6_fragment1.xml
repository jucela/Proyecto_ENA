<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mod6_layoutFragment1"
    android:focusableInTouchMode="true"
    tools:context="pe.gob.inei.encuestahabilidades.fragments.Modulo6Fragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/txtCabecera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/modulo6_nombre"
            android:background="@color/colorPrimary"
            android:textColor="@color/icons"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/fab_margin"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mod6_txtCabecera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin5dp"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginTop="@dimen/margin10dp"
                android:text="A continuación le preguntaré por las habilidades de los trabajadores que actualmente tiene su empresa. Por favor, no piense en ninguno de los problemas que pueda estar enfrentando para contratar nuevos trabajadores."
                android:background="@drawable/cajas_de_texto"/>
            <include layout="@layout/cabecera_informante"/>
            <include layout="@layout/modulo6_pregunta1"/>
            <include layout="@layout/modulo6_pregunta2"/>
            <include layout="@layout/modulo6_pregunta3"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
