<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pe.gob.inei.encuestahabilidades.fragments.VisitaFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/txtCabecera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CONTROL DE VISITAS"
            android:background="@color/colorPrimary"
            android:textColor="@color/icons"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/fab_margin"/>
    </LinearLayout>
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/borde_layout_preguntas"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/margin15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/fab_margin"
                android:text="@string/caratula_datos"
                android:textColor="@color/icons"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_marginTop="@dimen/fab_margin"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/fab_margin"
                    android:layout_marginBottom="1dp"
                    android:text="@string/caratula_datos_operador"
                    android:textColor="@color/icons" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@color/accent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/fab_margin"
                        android:text="DNI"
                        android:layout_marginRight="1dp"
                        android:textColor="@color/icons" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/accent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/fab_margin"
                        android:text="@string/caratula_datos_nombres"
                        android:textColor="@color/icons" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/visita_edtDNIOperador"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:maxLength="8"
                        android:paddingLeft="@dimen/margin5dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/fondo_edit_text"
                        android:inputType="numberPassword" />
                    <EditText
                        android:id="@+id/visita_edtNombreOperador"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:paddingLeft="@dimen/margin5dp"
                        android:background="@drawable/fondo_edit_text" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_datos_jefe"
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_marginBottom="1dp"
                    android:textColor="@color/icons" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@color/accent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/fab_margin"
                        android:text="DNI"
                        android:layout_marginRight="1dp"
                        android:textColor="@color/icons" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/accent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/fab_margin"
                        android:text="@string/caratula_datos_nombres"
                        android:textColor="@color/icons" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/visita_edtDNIJefe"
                        android:layout_width="150dp"
                        android:maxLength="8"
                        android:paddingLeft="@dimen/margin5dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/fondo_edit_text"
                        android:inputType="numberPassword" />
                    <EditText
                        android:id="@+id/visita_edtNombreJefe"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/margin5dp"
                        android:inputType="text"
                        android:background="@drawable/fondo_edit_text" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_datos_supervisor"
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_marginBottom="1dp"
                    android:textColor="@color/icons" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@color/accent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/fab_margin"
                        android:text="DNI"
                        android:layout_marginRight="1dp"
                        android:textColor="@color/icons" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/accent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/fab_margin"
                        android:text="@string/caratula_datos_nombres"
                        android:textColor="@color/icons" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/visita_edtDNISupervisor"
                        android:layout_width="150dp"
                        android:maxLength="8"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/margin5dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/fondo_edit_text"
                        android:inputType="numberPassword" />
                    <EditText
                        android:id="@+id/visita_edtNombreSupervisor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/margin5dp"
                        android:inputType="text"
                        android:background="@drawable/fondo_edit_text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout >