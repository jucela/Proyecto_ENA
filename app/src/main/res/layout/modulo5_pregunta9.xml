<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/margin15dp"
    android:id="@+id/mod5_p9_lyt"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod5_p9"
        android:layout_marginBottom="@dimen/fab_margin"/>
    <TextView
        android:id="@+id/mod5_p9_txtVacantesAnteriores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin10dp"
        android:text="Número de vacantes registradas en la pregunta 8:"
        android:background="@drawable/border_layout_subpreguntas"
        android:layout_marginBottom="@dimen/fab_margin"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Ocupación"
            android:textColor="@color/icons"
            android:background="@color/accent"
            android:layout_marginRight="1dp"/>
        <TextView
            android:gravity="center"
            android:layout_weight="14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Ocupación específica"
            android:textColor="@color/icons"
            android:background="@color/accent"
            android:layout_marginRight="1dp"/>
        <TextView
            android:gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/mod5_p9_sp3"
            android:textColor="@color/icons"
            android:background="@color/accent"
            android:layout_marginRight="1dp"/>
        <TextView
            android:gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Editar/Borrar"
            android:textColor="@color/icons"
            android:background="@color/accent"
            android:layout_marginRight="1dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/mod5_p9_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="60dp"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/mod5_p9_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:fabSize="normal"
            android:src="@drawable/icon_agregar"
          />
    </RelativeLayout>
</LinearLayout>