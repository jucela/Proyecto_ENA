<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/mod7_p28_ly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/margin15dp"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod7_p28"
        android:layout_marginBottom="@dimen/fab_margin"/>
    <LinearLayout
        android:id="@+id/mod7_p28_lyt_ck"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/mod7_p28_ck1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod7_p28_sp1"
            android:layout_margin="@dimen/margin5dp"/>
        <CheckBox
            android:id="@+id/mod7_p28_ck2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod7_p28_sp2"
            android:layout_margin="@dimen/margin5dp"/>
        <CheckBox
            android:id="@+id/mod7_p28_ck3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod7_p28_sp3"
            android:layout_margin="@dimen/margin5dp"/>
        <LinearLayout
            android:id="@+id/mod7_p28_lyt_ck4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/margin5dp">
            <CheckBox
                android:id="@+id/mod7_p28_ck4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mod7_p28_sp4"
                android:layout_marginRight="@dimen/margin15dp"
                />
            <EditText
                android:id="@+id/mod7_p28_ck4_edt"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/margin5dp"
                android:hint="@string/especifique"
                android:inputType="text"
                android:maxLength="200"
                android:background="@drawable/fondo_edit_text"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
        <CheckBox
            android:id="@+id/mod7_p28_ck5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod7_p28_sp5"
            android:layout_margin="@dimen/margin5dp"/>

    </LinearLayout>
</LinearLayout>